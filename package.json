{
    "name": "phaser3-typescript-project-template",
    "version": "1.2.0",
    "description": "A Phaser 3 Project Template using Rollup and TypeScript",
    "main": "src/game.ts",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && phaser-asset-pack-hashing -j -r dist",
        "build-android": "npm run build && cap sync && cd android && ./gradlew clean && ./gradlew assemble"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/photonstorm/phaser3-typescript-project-template.git"
    },
    "author": "Richard Davey <rich@photonstorm.com> (http://www.photonstorm.com)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/photonstorm/phaser3-typescript-project-template/issues"
    },
    "homepage": "https://github.com/photonstorm/phaser3-typescript-project-template#readme",
    "devDependencies": {
        "phaser": "^3.60.0",
        "phaser-asset-pack-hashing": "^1.0.5",
        "typescript": "^5.0.3",
        "vite": "^4.2.1",
        "@capacitor/cli": "^4.0.0"
    },
    "dependencies": {
        "@capacitor/android": "^4.0.0",
        "@capacitor/core": "^4.0.0",
        "@capacitor/ios": "^4.7.1"
    }
}
